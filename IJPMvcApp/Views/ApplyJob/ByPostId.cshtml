@model IEnumerable<IJPMvcApp.Models.ApplyJob>

@{
    ViewData["Title"] = "ByPostId";
}
<div class="container">
<h1>Applications By PostId</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppliedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppliedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationStatus)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { postId = item.PostId, empId = item.EmpId }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Details", "Details", new { postId = item.PostId, empId = item.EmpId }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Delete", "Delete", new { postId = item.PostId, empId = item.EmpId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
}
    </tbody>
</table>

<div>
        <a asp-action="Index" class="btn btn-primary" style="margin-top: 15px;margin-bottom:15px">Back to List</a>
</div>
</div>