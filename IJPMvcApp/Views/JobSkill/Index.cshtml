@model IEnumerable<IJPMvcApp.Models.JobSkill>
<div class="container">
@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center; font-weight:bold">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Job Skill</a>

</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkillId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                        @Html.ActionLink("Edit", "Edit", new { jobId = item.JobId, skillId = item.SkillId }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Details", "Details", new { jobId = item.JobId, skillId = item.SkillId }, new { @class = "btn btn-primary" })                        
                        @Html.ActionLink("ByJobId", "DetailsByJobId", new { jobId = item.JobId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("BySkillId", "DetailsBySkillId", new { skillId = item.SkillId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { jobId = item.JobId, skillId = item.SkillId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
}
    </tbody>
</table>
</div>