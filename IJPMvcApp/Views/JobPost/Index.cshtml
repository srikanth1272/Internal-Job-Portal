@model IEnumerable<IJPMvcApp.Models.JobPost>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center; font-weight:bold">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Job Post</a>

</p>
<div class="container">
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateofPosting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastDatetoApply)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacancies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostId)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateofPosting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDatetoApply)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Vacancies)
            </td>
            <td>
                        @Html.ActionLink("Edit", "Edit", new { postId = item.PostId },new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Details", "Details", new { postId = item.PostId }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("By JobId", "ByJobId", new { jobId = item.JobId }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Delete", "Delete", new { postId = item.PostId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Apply", "ApplyJob", new { postId = item.PostId }, new { @class = "btn btn-success" })
            </td>
        </tr>
}
    </tbody>
</table>
</div>