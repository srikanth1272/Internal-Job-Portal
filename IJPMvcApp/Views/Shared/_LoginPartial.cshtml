@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<style>
    
    .navbar-nav {
        display: flex !important;
        justify-content: flex-start !important; /* Align items to the left */
           margin-right:0;
    }
    /* Custom styling for the Logout button */
    .nav-item .form-inline {
        margin: 0; /* Remove any default margin */
    }

        .nav-item .form-inline button {
            background-color: #0861e16e; /* Transparent background to blend with the navbar */
            border: none; /* Remove default button border */
            color: #333; /* Dark text color */
            padding: 0; /* Remove default padding */
            font-size: 16px; /* Set font size */
            cursor: pointer; /* Change cursor to pointer on hover */
        }

            .nav-item .form-inline button:hover {
                color: #007bff; /* Change text color on hover (Bootstrap primary color) */
            }

            .nav-item .form-inline button:focus {
                outline: none; /* Remove default focus outline */
            }


</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <div class="head1">
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark" >Logout</button>
        </form>
    </li>
    </div>
}
else
{

            <li class="nav-item mb-2 mt-2" >
            <a class="btn btn-primary nav-link text-white p-0 me-2 custom-btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item mb-2 mt-2">
            <a class="btn btn-secondary nav-link text-white p-0 custom-btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>


}
</ul>
